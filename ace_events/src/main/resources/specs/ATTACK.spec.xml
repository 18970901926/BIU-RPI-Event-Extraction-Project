    </argument>
    <argument>
      <role>Place</role>
      <marker>PLC</marker>
      <types>
      	<type>GPE</type>
      	<type>LOC</type>
      	<type>FAC</type>
      </types>
      <examples>
        <example>Baghdad</example>
