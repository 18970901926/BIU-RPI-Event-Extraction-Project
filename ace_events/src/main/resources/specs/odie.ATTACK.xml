      <seed>bombing</seed>
      <seed>stab</seed>
      <seed>stabbings</seed>
      <seed>explosion</seed>
      <seed>firing</seed>
    </seeds>
  </predicate>
  <arguments>
    <argument>
      <role>Attacker</role>
      <types>
      	<type>PER</type>
      	<type>ORG</type>
      	<type>GPE</type>
      </types>
      <examples>
        <example>force</example>
        <example>Israel</example>
        <example>terrorist</example>
        <example>man</example>
        <example>demonstrator</example>
        <example>gunman</example>
      </examples>
    </argument>
    <argument>
      <role>Target</role>
      <types>
      	<type>PER</type>
      	<type>ORG</type>
      	<type>VEH</type>
      	<type>FAC</type>
      	<type>WEA</type>
      </types>
      <examples>
        <example>Palestinian</example>
        <example>Fallujah</example>
        <example>warship</example>
        <example>soldier</example>
        <example>café</example>
        <example>businessman</example>
        <example>car</example>
        <example>garage</example>
        <example>woman</example>
      </examples>
    </argument>
    <argument>
      <role>Instrument</role>
      <types>
      	<type>VEH</type>
      	<type>WEA</type>
      </types>
      <examples>
        <example>bomb</example>
        <example>rocket</example>
        <example>rifle</example>
        <example>gun</example>
        <example>stone</example>
        <example>bottle</example>
      </examples>
    </argument>
    <argument>
      <role>Time</role>
      <types>
      	<type>TIME</type>
      </types>
      <examples>
        <example>Sunday night</example>
        <example>Thursday</example>
        <example>45-minute</example>
      </examples>
    </argument>
    <argument>
      <role>Place</role>
      <types>
      	<type>GPE</type>
      	<type>LOC</type>
      	<type>FAC</type>
      </types>
      <examples>
        <example>Baghdad</example>
        <example>Gilo</example>
        <example>Yemen</example>
        <example>market</example>
        <example>Jerusalem</example>
        <example>café</example>
        <example>garage</example>
        <example>site</example>
        <example>building</example>
        <example>Mercedes</example>
        <example>car</example>
      </examples>
    </argument>
  </arguments>
  <usage_samples>
    <sample>Terrorists clashed soldiers in Baghdad on Thursday.</sample>
    <sample>Men shot at the the warship with rifles in Yemen on Sunday night.</sample>
    <sample>Forces had a 45-Minute gun battle with Palestinians at the market.</sample>
  </usage_samples>
